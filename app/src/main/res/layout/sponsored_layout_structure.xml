<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="8dp">

    <ImageView
        android:id="@+id/campus_market_sponsored_item_itemimage"
        android:layout_width="216dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus_market_sponsored_item_username"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/campus_market_sponsored_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_person_green_24dp"
        android:drawableLeft="@drawable/ic_person_green_24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="CodeEnzyme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campus_market_sponsored_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="FUTO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campus_market_sponsored_item_caption"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="An android phone of latest version"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus_market_sponsored_item_itemimage" />

    <ImageView
        android:id="@+id/imageView2sponsored"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus_market_sponsored_item_caption"
        app:srcCompat="@drawable/ic_person_green_24dp" />

    <RatingBar
        android:id="@+id/campus_market_sponsored_item_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2sponsored"
        app:layout_constraintTop_toBottomOf="@+id/campus_market_sponsored_item_caption" />

    <Button
        android:id="@+id/campus_market_sponsored_item_buttonview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/view_btn_style"
        android:text="View"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/campus_market_sponsored_item_rating"
        app:layout_constraintTop_toBottomOf="@+id/campus_market_sponsored_item_caption" />

    <TextView
        android:id="@+id/campus_market_sponsored_item_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/favourite_btn_style"
        android:drawableStart="@drawable/ic_favorite_black_24dp"
        android:drawableLeft="@drawable/ic_favorite_black_24dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="40"
        app:layout_constraintEnd_toEndOf="@+id/campus_market_sponsored_item_itemimage"
        app:layout_constraintTop_toTopOf="@+id/campus_market_sponsored_item_itemimage" />

    <TextView
        android:id="@+id/sponsored_promote_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/curved_rect"
        android:drawableStart="@drawable/ic_poll_white_24dp"
        android:drawableLeft="@drawable/ic_poll_white_24dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:rotation="-90"
        android:text="Promoted"
        android:textColor="@color/colorWhite"
        android:translationX="-50dp"
        app:layout_constraintStart_toStartOf="@+id/campus_market_sponsored_item_itemimage"
        app:layout_constraintTop_toTopOf="@+id/campus_market_sponsored_item_itemimage" />
</androidx.constraintlayout.widget.ConstraintLayout>